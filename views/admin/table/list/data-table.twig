<table class="table table-striped table-bordered dataTable">

    <thead>
        <tr role="row">
    
            {% for name, field in fields %}
                {{ view('table ~ list.th',
                    {
                        name: name,
                        field: field
                    })
                 }}
            {% endfor %}
        
            {% if with_row_actions %}
                <th>&nbsp;</th>
            {% endif %}
        
        </tr>
    </thead>
    
    <tbody>
    {% for row in rows %}
        <tr>
            {% for name, field in fields %}
                {{ view('table ~ list.td',
                    {
                        name: name,
                        row: row,
                        field: row.field(name)
                    }
                ) }}
            {% endfor %}
            
            {{ view('table ~ list.actions', { row: row }) }}
        </tr>
    {% endfor %}
    </tbody>
    
</table>